{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "sandbar": ["sandbar/src"]
    },
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules", "dist"]
}
